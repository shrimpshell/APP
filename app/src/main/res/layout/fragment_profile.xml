<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@drawable/customer_global_background"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile" />

    <Button
        android:id="@+id/toEmployeePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="員工頁面"/>

    <TextView
        android:id="@+id/txWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="@string/txLogInWelcome"
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="70dp">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/login32"
            android:drawablePadding="10dp"
            android:padding="5px"
            android:singleLine="true"
            android:hint="@string/textLogEmail"
            android:textSize="30sp"
            android:background="@color/colorWhite"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/key32"
            android:drawablePadding="20dp"
            android:padding="5px"
            android:singleLine="true"
            android:hint="@string/textLogInPassword"
            android:textSize="30sp"
            android:inputType="textPassword"
            android:background="@color/colorWhite"/>

    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="20dp">

        <Button
            android:id="@+id/btJoin"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/textLogJoin"
            android:textColor="#000000"
            android:onClick="join"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btLogIn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:text="@string/textLogLogIn"
            android:textColor="#000000"
            android:onClick="login"
            android:textStyle="bold"/>
    </RelativeLayout>

</LinearLayout>