<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/customer_detail_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="整體評分"
        android:textSize="25sp" />

    <RatingBar
        android:id="@+id/rbRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5" />

    <EditText
        android:id="@+id/etOpinion"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="5dp"
        android:minLines="3"
        android:gravity="top"
        android:background="@drawable/order_edt_note_bg"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/btRatingCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/atBackground"
            android:textSize="20sp"
            android:text="取 消"/>

        <Button
            android:id="@+id/btRatingOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@color/atBackground"
            android:textSize="20sp"
            android:text="送 出"/>
    </LinearLayout>




</LinearLayout>